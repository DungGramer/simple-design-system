{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "dist",

    //Update this path as necessary
    "paths": {
      "@components/*": ["src/components/*"],
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],

  //Add any build/compiled folders here to stop vscode searching those
  "exclude": ["node_modules", "dist"],

  "files.exclude": {
    "node_modules": true
  }
}
